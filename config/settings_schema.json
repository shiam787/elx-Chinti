  {
    "name": "Character restrictions [Plus]",
    "settings": [
      {
        "type": "header",
        "content": "Character restrictions"
      },
      {
        "type": "paragraph",
        "content": "Allow only UTF-8 characters in the shipping and billing addresses on checkout."
      },
      {
        "type": "checkbox",
        "id": "plus_enable_character_restrictions",
        "label": "Enable character restrictions",
        "default": true,
        "info": "When enabled, only UTF-8 characters will be allowed in the shipping and billing addresses."
      },
      {
        "type": "text",
        "id": "plus_input_allowed_characters",
        "label": "Special characters that should be allowed. Only numbers and letters are accepted by default (eg: \"#-&.:{}\")"
      },
      {
        "type": "text",
        "id": "plus_input_max_length",
        "label": "The maximum number of characters allowed in a checkout input. Must be a number."
