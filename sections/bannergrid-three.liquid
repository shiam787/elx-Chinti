<div data-section-id="{{ section.id }}" data-section-type="bannergrid-three-section" class="wrapper bannergrid-three-section">

    {% if section.blocks.size > 0 %}
        <div class="row" id="bannergrid-{{ section.id }}">
            {% for block in section.blocks %}
                <div class="col-wide-4 col-medium-12 col-small-12 col-smallest-12 {{ block.settings.text_color | escape }}">
                    <div class="banner__content">
                    	{% if block.settings.alttext %}
                		 	<h4><a href="{{ block.settings.link }}">{{ block.settings.alttext | escape }}</a></h4>
                		 {% endif %}
                		 {% if block.settings.link != blank %}
		                 	<a href="{{ block.settings.link }}" class="btn-shop-now">Shop Now</a>
		                 {% endif %}
                    </div>
                    
                    
                    {% if block.settings.image %}
                     {% if block.settings.link != blank %}
                     <a href="{{ block.settings.link }}">
                     	{% endif %}
                      <img src="{{ block.settings.image | img_url: '2048x' }}" alt="{% if block.settings.alttext %}{{ block.settings.alttext | escape }}{% endif %}" />
                      {% if block.settings.link != blank %}
                      </a>
                      {% endif %}
                    {% endif %}
                    {% if block.settings.image == blank %}
                      <div class="placeholder-background">
                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {% endif %}
                   
                </div>
            {% endfor %}
        </div>
    {% endif %}

</div>

{% schema %}
  {
    "name": "Banner Grid - Three",
    "class": "index-section index-section--flush",
    "max_blocks": 3,
    "blocks": [
      {
        "type": "image",
        "name": "Banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
          },
          {
            "type": "text",
            "id": "alttext",
            "label": "Alt Text",
            "default": "Banner"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Banner link"
          },
          {
            "type": "select",
            "id": "text_color",
            "label": "Text color",
            "options": [
              { "value": "text-light", "label": "Light" },
              { "value": "text-dark", "label": "Dark" }
            ],
            "default": "text-light"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Banner Grid - Three",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }]
  }
{% endschema %}
