<header class="page-header">
    
    <div class="page-header__menu">
        <button
            class="page-header__icon meganav-trigger"
            data-meganav-trigger
        >
            {%- render 'svg--menu' -%}
        </button>

        {%-
            render 'meganav'
            | meganav: section.blocks
            | classes: 'meganav--desktop'
            | enable_mobile_background_colour: section.settings.enable_mobile_background_colour
            | mobile_background_colour: section.settings.mobile_background_colour
            | enable_mobile_item_colours: section.settings.enable_mobile_item_colours
            | mobile_item_colour: section.settings.mobile_item_colour
            | enable_mobile_action_colours: section.settings.enable_mobile_action_colours
            | mobile_action_colour: section.settings.mobile_action_colour
        -%}
    </div>
     <div class="page-header__logo">
          <a href="{{ shop.url }}">
              {%- render 'svg--logo' -%}
          </a>
      </div>
    

    <div class="page-header__actions">
        {%- render 'header-actions' -%}
    </div>
</header>

{% render 'header--search-container' %}

