{% schema %}
{
	"name": "Newsletter",
	"settings": [
		{
			"type": "image_picker",
			"id": "logo",
			"label": "Logo"
		},
			{
			"type": "image_picker",
			"id": "mobile_logo",
			"label": "Mobile Logo"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Heading",
			"default": "Coming Soon"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading",
			"default": "Sign up and be the first to know when the 10 year anniversary collection arrives"
		},
		{
			"type": "textarea",
			"id": "hashtag",
			"label": "Hashtag"
		},
		{
			"type": "select",
			"id": "background_width",
			"label": "Background Column Width",
			"options": [
				{ "value": "background-half", "label": "Half" },
				{ "value": "background-full", "label": "Full" }
			],
			"default": "background-half"
		},
		{
			"type": "image_picker",
			"id": "background_image",
			"label": "Background Image"
		},
		{
			"type": "image_picker",
			"id": "background_image_mobile",
			"label": "Mobile Background Image"
		},
		{
			"type": "color",
			"id": "background_color",
			"label": "Background Color"
		},
		{
			"type": "text",
			"id": "success_title",
			"label": "Success Heading",
			"default": "Thank You for signing up to our newsletter!"
		},
		{
			"type": "text",
			"id": "success_subheading",
			"label": "Success Subheading",
			"default": "You will receive an email to confirm your subscription and receive 10% off your first order."
		}
	],
	"blocks": [

	]
}
{% endschema %}
