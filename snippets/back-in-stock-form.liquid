<form
    id="back-in-stock-content"
    data-back-in-stock-form
    data-klaviyo-key="{{ settings.klaviyo_api_key }}"
    data-list-id="{{ settings.back_in_stock_list_id }}"
>
    <div data-back-in-stock-success></div>
        <div data-back-in-stock-success-view>
            <div class="errors"  data-back-in-stock-error></div>
                <div class="form-group">
                    <label
                        for="back-in-stock-email"
                        class="form-group__label"
                    >
                        Email*
                    </label>
                    <input
                        id="back-in-stock-email"
                        class="input"
                        name="email"
                        type="email"
                        required
                        data-back-in-stock-email
                    >
                </div>
                <input
                    name="product"
                    value="{{ product.id }}"
                    type="hidden"
                    data-back-in-stock-product
                >
                <input
                    name="variant"
                    value="{{ product.selected_or_first_available_variant.id }}"
                    type="hidden"
                    data-back-in-stock-variant
                >
                <button type="submit" class="button button--fill button--primary" data-back-in-stock-submit>
                    {{ 'products.product.back_in_stock.email_me' | t }}
                </button>
        </div>
</form>
