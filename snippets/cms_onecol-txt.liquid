{% case block.settings.add_border_top %}
	{% when 'add_border_top_yes' %}
		{%- assign border_top = 'border-top' -%}
	{% when 'add_border_top_no' %}
		{%- assign border_top = '' -%}
{% endcase %} 

{% case block.settings.add_border_bottom %}
	{% when 'add_border_bottom_yes' %}
		{%- assign border_bottom = 'border-bottom' -%}
	{% when 'add_border_bottom_no' %}
		{%- assign border_bottom = '' -%}
{% endcase %}  

<div data-section-id="{{ section.id }}" data-section-type="onecol-txt-section" class="onecolumn-txt-section cms-page wrapper {{ border_top }} {{ border_bottom }}">

	{% case block.settings.text_align %}
		{% when 'text-left' %}
			{%- assign text_direction = 'text-left' -%}
    	{% when 'text-center' %}
			{%- assign text_direction = 'text-center' -%}
		{% when 'text-right' %}
			{%- assign text_direction = 'text-right' -%}
	{% endcase %}  
  
  
  
		{% if block.settings.title != blank %}
    	<div class="cms-content__row row" id="contentgrid-{{ section.id }}">
            <div class="col-full-width {{ text_direction }} title no-vert-padding">
            	{% if block.settings.is_title_h1 == 'is_title_h1_yes' %}
	                <h1>
	                	{{ block.settings.title | escape }}
	                </h1>
                {% else %}
	                <h2>
	                	{{ block.settings.title | escape }}
	                </h2>
                {% endif %}
            </div>
        </div>
        {% endif %}
        {% if block.settings.content != blank %}
        <div class="cms-content__row row" id="contentgrid-{{ section.id }}">
        	<div class="col-full-width {{ text_direction }} description no-vert-padding">
            	{{ block.settings.content }}
        	</div>
        </div>
        {% endif %}

</div>