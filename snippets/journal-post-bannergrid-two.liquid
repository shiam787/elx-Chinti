<div class="journal-post-bannergrid-two-section">
    <div class="row">
        <div class="col-wide-6 col-medium-6">
            {% if block.settings.link1 != blank %}
            <a href="{{ block.settings.link1 }}" class="image">
            {% endif %}	
                {% if block.settings.image1 != blank %}
                    <picture>
                        <source media="(min-width: 1024px)" srcset="{{ block.settings.image1 | img_url: 'master' }}">
                        {% if block.settings.mobile_image1 %}<source srcset="{{ block.settings.mobile_image1 | img_url: '500x' }}">{% endif %}
                        <img src="{{ block.settings.image1 | img_url: 'master' }}" alt="{{ block.settings.alttext1 }}" />
                    </picture>
                {% else %}
                    <div class="placeholder-background">
                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {% endif %}
            {% if block.settings.link1 != blank %}
            </a> 
            {% endif %}	
            {% if block.settings.alttext1 != blank %}
            <h4 class="alt">{% if block.settings.link1 != blank %}<a href="{{ block.settings.link1 }}">{% endif %}{{ block.settings.alttext1 }}{% if block.settings.link1 != blank %}</a>{% endif %}</h4>
            {% endif %}	
        </div>
        <div class="col-wide-6 col-medium-6">
            {% if block.settings.link2 != blank %}
            <a href="{{ block.settings.link2 }}" class="image">
            {% endif %}	
                {% if block.settings.image2 != blank %}
                    <picture>
                        <source media="(min-width: 1024px)" srcset="{{ block.settings.image2 | img_url: 'master' }}">
                        {% if block.settings.mobile_image2 %}<source srcset="{{ block.settings.mobile_image2 | img_url: '500x' }}">{% endif %}
                        <img src="{{ block.settings.image2 | img_url: 'master' }}" alt="{{ block.settings.alttext2 }}" />
                    </picture>
                {% else %}
                    <div class="placeholder-background">
                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {% endif %}
            {% if block.settings.link2 != blank %}
            </a> 
            {% endif %}	
            {% if block.settings.alttext2 != blank %}
            <h4 class="alt">{% if block.settings.link2 != blank %}<a href="{{ block.settings.link2 }}">{% endif %}{{ block.settings.alttext2 }}{% if block.settings.link2 != blank %}</a>{% endif %}</h4>
            {% endif %}	
        </div>
    </div>
</div>